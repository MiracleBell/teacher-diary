<?xml version="1.0" encoding="UTF-8"?>

<?import control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0"
            prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.control.dialog.AddRatingController">
    <top>
        <HBox prefHeight="52.0" prefWidth="380.0" BorderPane.alignment="CENTER">
            <children>
                <VBox prefHeight="200.0" prefWidth="100.0"/>
            </children>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label contentDisplay="RIGHT" text="Прогресс">
                    <graphic>
                        <!--                        <TextField prefHeight="25.0" prefWidth="246.0" />-->
                        <FloatField prefHeight="25.0" prefWidth="246.0" promptText="от 0 до 100"/>
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Label>
                <Label contentDisplay="RIGHT" text="Label">
                    <graphic>
                        <TextField prefHeight="25.0" prefWidth="249.0"/>
                    </graphic>
                </Label>
                <SplitMenuButton mnemonicParsing="false" text="Список студентов">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Action 1"/>
                        <MenuItem mnemonicParsing="false" text="Action 2"/>
                    </items>
                </SplitMenuButton>
            </children>
        </VBox>
    </center>
    <bottom>
        <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="acceptButton" mnemonicParsing="false" onAction="#pressAccept" text="Принять"/>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#pressCancel" text="Отмена"/>
            </buttons>
        </ButtonBar>
    </bottom>
    <padding>
        <Insets left="10.0" right="10.0"/>
    </padding>
</BorderPane>
